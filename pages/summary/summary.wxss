/**index.wxss**/
image{
  position: absolute;
  width: 100%;
  height: 100%;
}

.content{
  position: absolute;
  z-index: 1;
}
.myAudio{
  background: #ffffff;
  margin: 15rpx;
  height: 100%;
  overflow: hidden;
}
progress {
  margin: 10px;
  width: 500rpx;
  margin-top:900rpx;
  margin-left: 130rpx;
  z-index: 1;
}

.progressText {
  margin-top:900rpx;
  margin-left: 340rpx;
  color: white;
  z-index: 1;
}

.totalDays {
  margin-top:300rpx;
  color: white;
  z-index: 1;
  margin-left: 40rpx;
  font-size: 40px;
  text-align:center
}

.btnEnter {
  top:100rpx;
  left: 50rpx;
  background-color: #ff577e; 
  color: #ffffff;
}

.btnStart {
  top:900rpx;
  left: 180rpx;
  background-color: #ff577e; 
  color: #ffffff;
}

.music {
  width: 40rpx;
  height: 40rpx;
  position: fixed;
  top:15rpx;
  right: 100rpx;
  z-index: 1;
}

.share {
  width: 40rpx;
  height: 40rpx;
  position: fixed;
  top:15rpx;
  right: 25rpx;
  z-index: 1;
}

.next {
  top:1200rpx;
  left: 330rpx;
  width: 140rpx;
  height: 140rpx;
  position: fixed;
  z-index: 1;
}

.close {
  width: 30rpx;
  height: 30rpx;
  position: fixed;
  top:15rpx;
  left: 25rpx;
  z-index: 1;
}
.textArea {
  margin-top:100rpx;
  width: 100%;
  height: 600rpx;
}
/* 普通类型的文字 */
.normal {
  color: #ffffff;
  margin-left: 50rpx;
  font-size: 16px;
  top: 20rpx;
  padding: 10px;
}

.important {
  color: #ffffff;
  margin-left: 50rpx;
  font-size: 22px;
  top: 20rpx;
  padding: 30rpx;
}

 